<mvc:View
    controllerName="accenture.tutorial1.ui5.tutorial1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Button text="Hello World!" press="onSayHello"></Button>
                        <ComboBox items="{CitiesModel>/}"  selectedKey="{ToolsModel>/cityName}">
                            <core:Item text="{CitiesModel>name}" key="{CitiesModel>name}"/>
                        </ComboBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
